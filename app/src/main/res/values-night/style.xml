<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarColor">
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="background_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#1A1B22</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="background_main">
        <item name="android:background">#1A1B22</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ToolbarText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Settings.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/settings_color2</item>
        <item name="titleTextAppearance">@style/toolbarText</item>
    </style>

    <style name="TextViewStyle_Settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:trackTint">@color/switcher</item>
        <item name="android:thumbTint">@color/switcher</item>
    </style>

    <style name="ButtonStyle_Main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_button</item>
        <item name="android:textSize">24sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">#FFFFFF</item>

    </style>

    <style name="iconColor">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>


</resources>