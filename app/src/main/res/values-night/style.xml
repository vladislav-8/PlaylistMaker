<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarColor">
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="background_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#1A1B22</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="background_main">
        <item name="android:background">#1A1B22</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ToolbarText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Settings.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/settings_color2</item>
        <item name="titleTextAppearance">@style/toolbarText</item>
    </style>

    <style name="TextViewStyle_Settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:trackTint">@color/switcher</item>
        <item name="android:thumbTint">@color/switcher</item>
    </style>

    <style name="ButtonStyle_Main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_button</item>
        <item name="android:textSize">24sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="iconColor">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="textColor_Artist">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:drawableTint">#FFFFFF</item>
        <item name="tint">#FFFFFF</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="placeholder_not_found">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="placeholder_internet_problem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="refresh_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="searchHistory_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:layout_marginTop">@dimen/marginTop_24</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize_19</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="player_toolbar">
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="player_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display</item>
    </style>

    <style name="player_textView_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="player_textView_long">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="player_track_long">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black_button</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="font_style" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textSize">@dimen/textSize_16</item>
    </style>

    <style name="NavigationViewStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black_button</item>
        <item name="itemIconTint">@drawable/main_menu_color</item>
        <item name="itemTextColor">@drawable/main_menu_color</item>
        <item name="menu">@menu/bottom_navigation_menu</item>
    </style>

    <style name="PlaylistEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/icon_color</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxStrokeColor">@drawable/stroke_color_night</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/switcher</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>