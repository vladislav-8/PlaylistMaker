<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3772E7"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginStart"
        android:fontFamily="@font/ys_display"
        android:gravity="top"
        android:paddingTop="@dimen/paddingTop"
        android:paddingBottom="@dimen/paddingBottom"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/marginStart"
        android:layout_marginEnd="@dimen/marginEnd"
        android:layout_marginBottom="@dimen/marginBottom"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display"
        android:includeFontPadding="false"
        android:letterSpacing="0"
        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/black_button"
        android:textIsSelectable="false"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:cornerRadius="@dimen/cornerRadius"
        app:icon="@drawable/ic_baseline_search_24"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/iconPadding"
        app:iconTint="@color/black_button"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/button_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/marginStart"
        android:layout_marginEnd="@dimen/marginEnd"
        android:layout_marginBottom="@dimen/marginBottom"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display"
        android:letterSpacing="0"
        android:text="@string/media"
        android:textAllCaps="false"
        android:textColor="@color/black_button"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:cornerRadius="@dimen/cornerRadius"
        app:icon="@drawable/ic_baseline_library_music_24"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/iconPadding"
        app:iconTint="@color/black_button"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/marginStart"
        android:layout_marginEnd="@dimen/marginEnd"
        android:layout_marginBottom="@dimen/marginBottom"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display"
        android:includeFontPadding="false"
        android:letterSpacing="0"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/black_button"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:cornerRadius="@dimen/cornerRadius"
        app:icon="@drawable/ic_baseline_settings_24"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/iconPadding"
        app:iconTint="@color/black_button"
        tools:ignore="VisualLintButtonSize" />

</LinearLayout>