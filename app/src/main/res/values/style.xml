<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarColor">
        <item name="navigationIconTint">@color/black_button</item>
    </style>


    <style name="background_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#F5F5F5</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="background_main">
        <item name="android:background">#3772E7</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="toolbarText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Settings.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/settings_color2</item>
        <item name="titleTextAppearance">@style/toolbarText</item>
    </style>

    <style name="TextViewStyle_Settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/settings_color</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="ButtonStyle_Main" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_button</item>
        <item name="android:textSize">24sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black_button</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/settings_color</item>
    </style>

    <style name="textColor_Artist">
        <item name="android:textColor">#AEAFB4</item>
        <item name="android:drawableTint">#AEAFB4</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="placeholder_not_found">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="placeholder_internet_problem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="refresh_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>